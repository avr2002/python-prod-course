{
    "editor.formatOnSave": true,
    "editor.rulers": [
        {
            "color": "lightblue",
            "column": 79
        },
        {
            "color": "lightgreen",
            "column": 99
        }
    ],
    "black-formatter.args": [
        "--line-length=99"
    ],
    "pylint.args": ["--disable=missing-class-docstring"],
    // "flake8.args": ["--ignore=E305"]
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
      }
}